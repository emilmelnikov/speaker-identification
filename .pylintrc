[MESSAGES CONTROL]
disable=locally-disabled,missing-docstring,broad-except

[BASIC]
class-rgx=[A-Z_][a-zA-Z0-9]*$
class-name-hint=[A-Z_][a-zA-Z0-9]*$
function-rgx=[a-z_][a-z0-9_]{,30}$
function-name-hint=[a-z_][a-z0-9_]{,30}$
method-rgx=[a-z_][a-z0-9_]{,30}$
method-name-hint=[a-z_][a-z0-9_]{,30}$
attr-rgx=[a-z_][a-z0-9_]{,30}$
attr-name-hint=[a-z_][a-z0-9_]{,30}$
argument-rgx=[a-z_][a-z0-9_]{,30}$
argument-name-hint=[a-z_][a-z0-9_]{,30}$
variable-rgx=[a-z_][a-z0-9_]{,30}$
variable-name-hint=[a-z_][a-z0-9_]{,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{,30}|(__.*__))$
class-attribute-name-hint=([A-Za-z_][A-Za-z0-9_]{,30}|(__.*__))$

[TYPECHECK]
ignored-modules=numpy
